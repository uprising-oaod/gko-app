= form_for(:user, url: session_path(:user), html: { class: 'd-flex' }) do |f|
  = f.email_field :email, autofocus: true, placeholder: "Username", autocomplete: "email", class: "form-control me-2"
  = f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control me-2"
  = f.submit "Login", class: "btn btn-warning"
